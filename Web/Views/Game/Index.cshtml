@model Web.Models.Game.GameViewModel

@{ ViewData["Title"] = "Game"; }

<div class="vhcenter">
    <h1>BULLS&amp;COWS</h1>
</div>

<div class="text-center">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Guess" class="form-control" maxlength="4"/>
                    <span asp-validation-for="Guess" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="MAKE A GUESS!" class="btn btn-primary" />
                    <input type="button" value="RESTART!" class="btn btn-primary" onclick="location.href='@Url.Action("Restart", "Game")'"/>
                </div>
            </form>
        </div>
    </div>
</div>

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        p {
            text-align: justify;
            font-size: 1.3em;
            padding-top: 4em;
        }

        .vhcenter {
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
